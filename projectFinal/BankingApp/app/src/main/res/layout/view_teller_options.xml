<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Create Account Button -->
    <ImageButton
        android:id="@+id/teller_create_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:gravity="center_horizontal|center_vertical"
        android:onClick="displayCreateAccount"
        android:src="@mipmap/create" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Give Interest Button -->
    <ImageButton
        android:id="@+id/teller_give_interest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:gravity="center_horizontal|center_vertical"
        android:onClick="displayGiveInterest"
        android:src="@mipmap/interest" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Deposit Button -->
    <ImageButton
        android:id="@+id/teller_deposit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:gravity="center_horizontal|center_vertical"
        android:onClick="displayDeposit"
        android:src="@mipmap/deposit" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Withdraw Button -->
    <ImageButton
        android:id="@+id/teller_withdraw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:gravity="center_horizontal|center_vertical"
        android:onClick="displayWithdraw"
        android:src="@mipmap/withdraw" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Check Balance Button -->
    <ImageButton
        android:id="@+id/teller_check_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:background="@drawable/button_round"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="displayBalance"
        android:src="@mipmap/balance" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Close Customer Session Button -->
    <ImageButton
        android:id="@+id/teller_log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:background="@drawable/button_round"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="closeSession"
        android:src="@mipmap/log_out" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

</LinearLayout>