<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Messages Button -->
    <ImageButton
        android:id="@+id/admin_messages_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:contentDescription="@string/admin_option_messages"
        android:gravity="center_horizontal|center_vertical"
        android:src="@mipmap/messages" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Create User Button -->
    <ImageButton
        android:id="@+id/admin_user_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:contentDescription="@string/admin_option_create"
        android:gravity="center_horizontal|center_vertical"
        android:src="@mipmap/create" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- View Users Button -->
    <ImageButton
        android:id="@+id/admin_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:contentDescription="@string/admin_option_view"
        android:gravity="center_horizontal|center_vertical"
        android:src="@mipmap/list" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Check Total Bank Balance Button -->
    <ImageButton
        android:id="@+id/admin_check_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round"

        android:contentDescription="@string/admin_option_balance"
        android:gravity="center_horizontal|center_vertical"
        android:src="@mipmap/balance" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Promote Teller Button -->
    <ImageButton
        android:id="@+id/admin_promote_teller_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:background="@drawable/button_round"
        android:contentDescription="@string/admin_option_promote"
        android:gravity="center_horizontal|center_vertical"
        android:src="@mipmap/promote" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

</LinearLayout>