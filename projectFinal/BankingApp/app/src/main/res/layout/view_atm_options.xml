<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- List Accounts and Balances Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/atm_list_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_round"

            android:gravity="center_horizontal|center_vertical"
            android:onClick="displayListAccountsBalances"
            android:src="@mipmap/list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/atm_option_list_account_balance"
            android:textAlignment="center"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Deposit Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/atm_deposit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"

            android:background="@drawable/button_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="displayATMDeposit"
            android:src="@mipmap/deposit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/atm_option_deposit"
            android:textAlignment="center"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Withdraw Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/atm_withdraw_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"

            android:background="@drawable/button_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="displayATMWithdraw"
            android:src="@mipmap/withdraw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/atm_option_withdraw"
            android:textAlignment="center"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    <!-- Check Account Balance Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/atm_check_balance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="5dp"
            android:background="@drawable/button_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="displayAccountBalance"
            android:src="@mipmap/balance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/atm_option_check_balance"
            android:textAlignment="center"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>

    !-- Log Out -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/atm_log_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="5dp"
            android:background="@drawable/button_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="logOut"
            android:src="@mipmap/log_out" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/log_out"
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <Space
            android:layout_width="5dp"
            android:layout_height="0dp" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1">

    </Space>


    <!-- TODO: View Messages -->

</LinearLayout>